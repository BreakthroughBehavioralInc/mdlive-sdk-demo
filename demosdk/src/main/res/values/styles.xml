<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--MDLive Styles -->
    <!-- ############ Custom Base Style ############ -->
    <style name="cigna_ActivityStyle" parent="rodeo__ActivityStyle">
        <item name="rodeo__app_name">@string/cigna</item>
        <!-- Select a Provider Lets get started screen background color. -->
        <item name="rodeo__menu_background">@color/cigna_blue2</item>
        <!-- 'Reason for Visit' Card 1 backgrounf color.-->
        <item name="fwf__card_view_background_color">@android:color/white</item>
        <item name="fwf__spinner_hint_text_color">@color/cigna_blue</item>
        <!-- ActionBar - ProgressBar color -->
        <item name="fwf__wizard_progress_bar_style">@style/cigna__ProgressBar_Horizontal</item>
        <item name="fwf__progress_bar_indeterminate_tint_color">@color/cigna_orange_dark</item>
        <!-- ActionBar Title Text Style -->
        <item name="rodeo__action_bar_title_text_style">@style/cigna__ActionBarTitleTextAppearance
        </item>
        <!-- File chooser background color -->
        <item name="fwf__file_chooser_dialog_background">@color/cigna_blue2</item>
        <!--Find a Provider inner Title Text Color, plus-->
        <item name="rodeo__page_title_style">@style/cigna__PageTitleStyle</item>
        <item name="rodeo__page_smaller_instructions_style">
            @style/cigna__PageSmallerInstructionsStyle
        </item>
        <!-- Reason for Visit - Upload Button Style -->
        <item name="fwf__upload_photo_button_style">@style/cigna__UploadPhotoButtonStyle</item>
        <!-- Medical History - Card View -->
        <item name="mdl__medical_history_style">@style/cigna__MedicalHistoryStyle</item>
        <item name="fwf__question_card_view_style">@style/cigna__QuestionCardViewStyle</item>

        <!-- Availability and consultation radio card views -->
        <item name="fwf__card_view_style">@style/cigna__CardViewStyle</item>
        <item name="fwf__radio_card_view_style">@style/cigna__RadioCardViewStyle</item>

        <!-- Payment and CC Subhead -->
        <item name="fwf__subhead_bar_payment_style">@style/cigna__SubheadBarPaymentStyle</item>

        <!-- Add Primary Care Physician Button -->
        <item name="mdl__add_primary_care_physician_button_style">
            @style/cigna__AddPrimaryCarePhysicianButtonStyle
        </item>

        <item name="mdl__sso_dashboard_style">@style/cigna__SsoDashboardStyle</item>

        <item name="fwf__user_profile_widget_style">@style/cigna__UserProfileWidgetStyle</item>
        <item name="fwf__switch_user_account_item_style">@style/cigna__SwitchUserAccountItemStyle
        </item>

        <item name="fwf__dashboard_card_view_button_style">
            @style/cigna__DashboardCardViewButtonStyle
        </item>

        <item name="mdl__waiting_room_and_video_session_style">
            @style/cigna__WaitingRoomAndVideoSessionStyle
        </item>

        <item name="mdl__find_provider_button_style">@style/cigna__FindProviderButtonStyle</item>

        <!--General FAB Styles -->
        <item name="fwf__fab_widget_background_tint">@android:color/white</item>
        <item name="fwf__fab_widget_disabled_background_tint">@color/black_transparent</item>
        <item name="fwf__fab_widget_icon_tint">@color/cigna_blue</item>
        <item name="fwf__fab_widget_alternative_tint">@color/cigna_orange_dark</item>
        <item name="fwf__fab_widget_ripple_color">@color/cigna_orange_dark</item>
        <!-- Ripple effect for touchable views -->
        <item name="colorControlHighlight">?attr/fwf__fab_widget_ripple_color</item>
    </style>

    <style name="cigna_DialogActivityStyle" parent="rodeo__DialogActivityStyle">
        <!--General FAB Styles -->
        <item name="fwf__fab_widget_background_tint">@color/cigna_blue2</item>
        <item name="fwf__fab_widget_disabled_background_tint">@color/black_transparent</item>
        <item name="fwf__fab_widget_icon_tint">@android:color/white</item>
        <item name="fwf__fab_widget_alternative_tint">@android:color/white</item>
        <item name="fwf__fab_widget_ripple_color">@color/cigna_orange_dark</item>
        <!-- Ripple effect for touchable views -->
        <item name="colorControlHighlight">?attr/fwf__fab_widget_ripple_color</item>
    </style>
    <!-- ############ End of Custom Base Style ############ -->

    <!-- ######################## Specific Custom Styles ######################## -->
    <!-- ActionBar - ProgressBar color -->
    <style name="cigna__ProgressBar_Horizontal" parent="@style/mdl__ProgressBar_Horizontal">
        <item name="android:progressDrawable">@drawable/cigna_progress_horizontal</item>
    </style>

    <!-- ActionBar Title Text Color -->
    <style name="cigna__ActionBarTitleTextAppearance" parent="@style/rodeo__ActionBarTitleTextAppearance">
        <item name="android:textColor">@color/cigna_blue2</item>
    </style>

    <!-- ##### Find a provider, Reason For Visit- #### -->
    <!--Find a Provider inner Title Text Color, plus-->
    <style name="cigna__PageTitleStyle" parent="rodeo__PageTitleStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="cigna__PageSmallerInstructionsStyle" parent="rodeo__PageSmallerInstructionsStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--Configuration for 'Upload a Photo' 2nd card on Reason for Visit screen.-->
    <style name="cigna__UploadPhotoButtonStyle" parent="fwf__UploadPhotoButtonStyle">
        <item name="fwf__upload_photo_button_background_color">@android:color/white</item>
        <item name="fwf__upload_photo_button_icon_tint_color">@color/cigna_blue2</item>
        <item name="fwf__text_view_alternate_text_color">@color/cigna_blue2</item>
        <item name="fwf__upload_photo_nav_arrow_icon_tint_color">@color/cigna_blue2</item>
    </style>
    <!-- ##### End of Find a provider, Reason For Visit- #### -->

    <!-- ##### Find a provider, Medical History #### -->
    <!--Card View Icons -->
    <style name="cigna__MedicalHistoryStyle" parent="@style/mdl__MedicalHistoryStyle">
        <!-- This is just for reference purpose, go to parent to see the what attributes can be overridden -->
    </style>

    <!--Card View Colors -->
    <style name="cigna__QuestionCardViewStyle" parent="fwf__QuestionCardViewStyle">
        <item name="fwf__question_card_view_icon_tint_color">@color/cigna_orange_dark</item>
        <item name="fwf__question_card_view_title_text_color">@color/cigna_dark_blue</item>
        <item name="fwf__question_card_view_summary_text_color">@color/cigna_blue_light</item>
        <item name="fwf__question_card_view_arrow_tint_color">@color/cigna_orange_dark</item>
    </style>
    <!-- ##### End of Find a provider, Medical History #### -->

    <!-- ##### Find a provider, Availability and consultation #### -->
    <style name="cigna__RadioCardViewStyle" parent="@style/fwf__RadioCardViewStyle">
        <!-- This is just for reference purposes only. Pleas go to parent to see  what attributes can be overridden -->
        <item name="fwf__radio_card_view_selected_background_color">@color/cigna_blue_light
        </item>
        <!-- Ripple effect for radio card view -->
        <item name="colorControlHighlight">?attr/fwf__fab_widget_ripple_color</item>
    </style>
    <!-- ##### End of Find a provider, Availability and consultation #### -->

    <!-- ##### Find a provider, Provider List Card View #### -->
    <style name="cigna__CardViewStyle" parent="@style/fwf__CardViewStyle">
        <!-- Ripple effect for card view -->
        <item name="colorControlHighlight">?attr/fwf__fab_widget_ripple_color</item>
    </style>
    <!-- ##### End of Find a provider, Provider List Card View #### -->

    <!-- ##### Payment and CC Subhead #### -->
    <style name="cigna__SubheadBarPaymentStyle" parent="@style/fwf__SubheadBarPaymentStyle">
        <item name="fwf__subhead_bar_payment_background_color">@color/cigna_orange_dark</item>
    </style>
    <!-- ##### End of Payment and CC Subhead #### -->

    <!-- ##### My Providers, Add Primary Care Physician Button #### -->
    <style name="cigna__AddPrimaryCarePhysicianButtonStyle" parent="@style/mdl__AddPrimaryCarePhysicianButtonStyle">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/cigna_blue_light</item>
    </style>
    <!-- ##### End of My Providers, Add Primary Care Physician Button #### -->

    <!-- ##### User profile widget style #### -->
    <style name="cigna__UserProfileWidgetStyle" parent="@style/fwf__UserProfileWidgetStyle">
        <item name="fillerTextColor">@color/cigna_blue_light</item>
        <item name="profilePictureBackgroundColor">@android:color/white</item>
    </style>

    <style name="cigna__SwitchUserAccountItemStyle" parent="@style/fwf__SwitchUserAccountItemStyle">
        <item name="fillerTextColor">@android:color/white</item>
        <item name="profilePictureBackgroundColor">@color/cigna_blue_light</item>
        <item name="lineOneTextAppearance">
            @style/cigna__UserProfileWidgetStyleLineOneTextAppearance
        </item>
        <item name="lineTwoTextAppearance">
            @style/cigna__UserProfileWidgetStyleLineTwoTextAppearance
        </item>
    </style>

    <style name="cigna__UserProfileWidgetStyleLineOneTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="cigna__UserProfileWidgetStyleLineTwoTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="cigna__DashboardCardViewButtonStyle" parent="@style/fwf__DashboardCardViewButtonStyle">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/cigna_blue</item>
    </style>

    <style name="cigna__WaitingRoomAndVideoSessionStyle" parent="@style/mdl__WaitingRoomAndVideoSessionStyle">
        <item name="mdl__waiting_room_text_appearance">@style/cigna__WaitingRoomTextAppearance
        </item>
        <item name="mdl__video_session_background_color">@color/cigna_blue_light</item>
        <item name="mdl__video_session_control_buttons_background_color">@color/cigna_dark_blue
        </item>
        <item name="mdl__video_session_primary_button_tint_color">@color/cigna_orange_dark</item>
        <item name="mdl__video_session_secondary_buttons_tint_color">@android:color/white</item>
    </style>

    <style name="cigna__WaitingRoomTextAppearance" parent="@style/mdl__WaitingRoomTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="cigna__FindProviderButtonStyle" parent="@style/mdl__FindProviderButtonStyle">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/cigna_blue_light</item>
    </style>

    <!-- ##### End of User profile widget style #### -->
    <!-- ######################## End of pecific Custom Styles ######################## -->

    <!-- ############ Dashboard ############ -->
    <style name="cigna__SsoDashboardStyle" parent="mdl__SsoDashboardStyle">
        <!-- mdl__sso_dashboard_title_icon has higher priority than mdl__sso_dashboard_title_text, this must be a drawable resource -->
        <!--<item name="mdl__sso_dashboard_title_icon">@null</item>-->
        <!-- Text to use as title, this must be a string resource -->
        <item name="mdl__sso_dashboard_title_text">@string/cigna</item>

        <!-- Layout to be used as header, if we change this layout the next header styles will be ignored -->
        <!--<item name="mdl__sso_dashboard_header_layout">@layout/mdl__sso_dashboard_header</item>-->
        <!-- Color to use as header background -->
        <item name="mdl__sso_dashboard_header_background_color">@color/cigna_blue2</item>
        <!-- Text to use as header, this must be a string resource -->
        <item name="mdl__sso_dashboard_header_text">@string/dashboard_text</item>
        <!-- Text appearance for the header text, this must be a style resource -->
        <item name="mdl__sso_dashboard_header_text_appearance">@style/cigna__HeaderTextAppearance
        </item>

        <item name="mdl__sso_dashboard_sub_header_background_color">
            @color/cigna_blue_light
        </item>

        <item name="mdl__switch_user_arrow_tint_color">@color/cigna_orange_dark</item>

        <item name="mdl__text_under_find_provider_text_appearance">
            @style/cigna__TextUnderFindProviderTextAppearance
        </item>

        <!-- Card view and icons -->
        <item name="fwf__sso_dashboard_card_view_style">@style/cigna__SsoDashboardCardViewStyle
        </item>
        <!--<item name="mdl__sso_dashboard_card_view_messages_icon">@drawable/mdl__messages_icon-->
        <!--</item>-->
        <!--<item name="mdl__sso_dashboard_card_view_family_icon">@drawable/mdl__family_icon</item>-->
        <!--<item name="mdl__sso_dashboard_card_view_visit_history_icon">-->
        <!--@drawable/mdl__my_providers_icon-->
        <!--</item>-->

        <!-- Layout to be used as footer, if we change this layout the next footer styles will be ignored -->
        <!--<item name="mdl__sso_dashboard_footer_layout">@layout/mdl__sso_dashboard_footer</item>-->
        <!-- Color to use as footer background -->
        <item name="mdl__sso_dashboard_footer_background_color">@color/cigna_blue2</item>
        <!-- Text to use as footer, this must be a string resource -->
        <item name="mdl__sso_dashboard_footer_text">@string/dashboard_footer</item>
        <!-- Text appearance for the footer text, this must be a style resource -->
        <item name="mdl__sso_dashboard_footer_text_appearance">@style/cigna__FooterTextAppearance

        </item>
        <item name="mdl__sso_dashboard_terms_and_conditions_text_appearance">
            @style/cigna__sso_dashboard_terms_and_conditions_text_appearance
        </item>
        <item name="mdl__sso_dashboard_terms_and_conditions_text_link_color">
            @color/cigna_orange_dark
        </item>

        <item name="mdl__family_member_chooser_dialog_style">
            @style/cigna__FamilyMemberChooserDialogStyle
        </item>
    </style>

    <style name="cigna__HeaderTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="cigna__SsoDashboardCardViewStyle" parent="@style/fwf__SsoDashboardCardViewStyle">
        <item name="fwf__sso_dashboard_card_view_icon_tint_color">@color/cigna_orange_dark</item>
        <item name="fwf__sso_dashboard_card_view_title_text_color">@color/cigna_dark_blue</item>
        <item name="fwf__sso_dashboard_card_view_summary_text_color">@color/cigna_blue_light</item>
        <item name="fwf__sso_dashboard_card_view_divider_color">@color/cigna_orange_dark</item>
    </style>

    <style name="cigna__FooterTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="cigna__sso_dashboard_terms_and_conditions_text_appearance" parent="@style/Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="cigna__FamilyMemberChooserDialogStyle" parent="@style/mdl__FamilyMemberChooserDialogStyle">
        <item name="mdl__family_member_chooser_dialog_background_color">@color/cigna_blue2</item>
        <item name="mdl__family_member_chooser_dialog_title_text_appearance">
            @style/cigna__FamilyMemberChooserDialogTitleTextAppearance
        </item>
    </style>

    <style name="cigna__FamilyMemberChooserDialogTitleTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="cigna__TextUnderFindProviderTextAppearance" parent="@style/mdl__TextUnderFindProviderTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- ############ End of Dashboard ############ -->

</resources>
