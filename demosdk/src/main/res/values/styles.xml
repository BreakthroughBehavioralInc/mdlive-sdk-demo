        <item name="fwf__dialog_text_color">@color/mdl__red</item>
        <item name="fwf__spinner_hint_text_color">@color/cigna_blue</item>
    </style>

    <style name="Cigna_HomeActivityStyle" parent="rodeo__HomeActivityStyle">
        <item name="rodeo__menu_background">@android:color/holo_blue_dark</item>
        <item name="rodeo__title_bar_text_color">@android:color/holo_blue_dark</item>
        <item name="fwf__fab_widget_background_tint">@color/w3c__green</item>
        <!--<item name="fwf__fab_widget_src">@drawable/next_arrow</item>-->
        <!--<item name="fwf__menu_button_text">@android:color/white</item>-->
    </style>

    <style name="fwf__EditTextStyle" parent="fwf__DefaultWidgetStyle">
        <item name="colorControlNormal">@color/fwf__has_focus</item>
        <item name="colorControlActivated">@color/fwf__has_focus</item>
        <item name="colorControlHighlight">@color/mdl__white</item>
        <item name="android:textColor">@color/mdl__black</item>
    </style>

    <style name="fwf__FindProviderButtonStyle" parent="fwf__FormButtonWidgetStyle">
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <!--This style is to change the color of the progress bar at the title bar -->
    <style name="mdl__ProgressBar_Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/cigna_progress_horizontal</item>
        <item name="android:minHeight">6dp</item>
        <item name="android:maxHeight">6dp</item>
    </style>

    <style name="rodeo__PageTitleStyle" parent="android:Widget.TextView">`
        <item name="android:layout_width">wrap_content</item>
