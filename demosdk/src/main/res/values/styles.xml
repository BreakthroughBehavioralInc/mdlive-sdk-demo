<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--MDLive Styles -->
    <!-- ActionBar - ProgressBar color -->
    <style name="mdl__ProgressBar_Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/cigna_progress_horizontal</item>
        <item name="android:minHeight">6dp</item>
        <item name="android:maxHeight">6dp</item>
    </style>
    <!-- ActionBar Title Text Color -->
    <style name="rodeo__ActionBarTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/cigna_blue_light</item>
    </style>

    <!--FAB Styles -->
    <style name="fwf__FabOkWidgetStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@android:color/transparent</item>
        <!--Floating Action Bar background color.-->
        <item name="backgroundTint">@android:color/white</item>
        <!--Floating Action Bar icon drawable.-->
        <item name="imageSrc">@drawable/fwf__fab_widget_src</item>
        <item name="invalidBackgroundTint">@color/cigna_blue</item>
        <!--Floating Action Bar icon temporary selected background color. -->
        <item name="rippleColor">@color/cigna_orange_light</item>
    </style>
    <style name="fwf__FabNextWidgetStyle" parent="fwf__FabOkWidgetStyle">
        <!--Set the FAB icon to the attribute 'fwf__fab_next_arrow_white' , which is overwritten in 'drawables'.-->
        <!--This is because 'fwf__fab_next_arrow_white' is used in Find a Provider wizard to set icon in soruce code. -->
        <item name="fwf__fab_widget_src">@drawable/fwf__fab_next_arrow_white</item>
        <item name="fwf__fab_widget_alternative_tint">?colorAccent</item>
    </style>


    <!-- #### Dashboard #### -->
    <style name="mdlive_SSODashboardActivityStyle" parent="rodeo__SSODashboardActivityStyle">
        <!-- mdl__sso_dashboard_title_icon has higher priority than mdl__sso_dashboard_title_text, this must be a drawable resource -->
        <!--<item name="mdl__sso_dashboard_title_icon">@drawable/mdlive_logo_small</item>-->
        <!-- Text to use as title, this must be a string resource -->
        <item name="mdl__sso_dashboard_title_text">CIGNA</item>
        <!-- Layout to be used as header, if we change this layout the next header styles will be ignored -->
        <item name="mdl__sso_dashboard_header_layout">@layout/mdl__sso_dashboard_header</item>
        <!-- Color to use as header background -->
        <item name="mdl__sso_dashboard_header_background_color">@android:color/white</item>
        <!-- Text to use as header, this must be a string resource -->
        <item name="mdl__sso_dashboard_header_text">@string/dashboard_text</item>
        <!-- Text appearance for the header text, this must be a style resource -->
        <item name="mdl__sso_dashboard_header_text_appearance">
            @style/Base.TextAppearance.AppCompat.Title
        </item>
        <!-- Layout to be used as footer, if we change this layout the next footer styles will be ignored -->
        <item name="mdl__sso_dashboard_footer_layout">@layout/mdl__sso_dashboard_footer</item>
        <!-- Color to use as footer background -->
        <item name="mdl__sso_dashboard_footer_background_color">@android:color/white</item>
        <!-- Text to use as footer, this must be a string resource -->
        <item name="mdl__sso_dashboard_footer_text">@string/dashboard_footer</item>
        <!-- Text appearance for the footer text, this must be a style resource -->
        <item name="mdl__sso_dashboard_footer_text_appearance">
            @style/Base.TextAppearance.AppCompat.Medium
        </item>
    </style>

    <!-- ##### Find a provider, Reason For Visit- #### -->
    <!-- Find a Provider Lets get started screen background color. -->
    <style name="rodeo__AccentLayoutStyle" parent="rodeo__PageLayoutStylePrimary">
        <item name="android:background">@color/cigna_blue2</item>
    </style>
    <!--Find a Provider smaller Title text size and color.-->
    <style name="rodeo__PageSmallerInstructionsStyle" parent="rodeo__PageInstructionsStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--Find a Provider  inner Title Text Color, plus-->
    <style name="rodeo__PageTitleStyle" parent="android:Widget.TextView">`
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/fwf__page_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fwf__spinner_hint_text_color">@color/cigna_blue</item>
    </style>
    <!--Find a Provider, Reason for Visit generic Style. -->
