        <item name="fwf__dialog_text_color">@color/mdl__red</item>
        <item name="fwf__spinner_hint_text_color">@color/cigna_blue</item>
    </style>
    <style name="rodeo__PageLayoutStylePrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/cigna_blue_light</item>
        <item name="android:padding">?attr/rodeo__page_background_primary_padding</item>
    </style>

